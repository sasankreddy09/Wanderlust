<%- layout("./layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <h1 class="col-6 offset-3">Signup on wanderlust </h1>
    <div class="col-6 offset-3">   
    <form action="/signup" method="post" novalidate class="needs-validation">
        <div class="mb-3">
        <lable for="username"class="form-label">username: </lable><br>
        <input type="text" class="form-control"name="username" id="username" required><br>
        <div class="valid-feedback">
            Looks good!
          </div>    
        <div class="invalid-feedback">
            Enter valid username
          </div>
        </div>
        <div class="mb-3">
            <lable for="email"class="form-label">email: </lable><br>
            <input type="email" class="form-control"name="email" id="email" required><br>
        </div>
        <div class="mb-3">
                <lable for="password"class="form-label">password: </lable><br>
                <input type="password" class="form-control"name="password" id="password" required><br>
        </div>
        <div class="mb-4">
            <button class="btn btn-outline-dark">signup</button>
        </div>
        </form>
    </div>
</div>
</body>